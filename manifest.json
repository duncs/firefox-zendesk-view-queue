{
  "manifest_version": 2,
  "name": "Zendesk Ticket Notifier",
  "version": "1.0",
  "description": "Notifies when new Zendesk tickets arrive.",
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "https://*.zendesk.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/icon32.png",
    "default_title": "Zendesk Notifier",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
        "id": "dferguson@itrsgroup.com",
        "strict_min_version": "120.0"
    }
  }
}
